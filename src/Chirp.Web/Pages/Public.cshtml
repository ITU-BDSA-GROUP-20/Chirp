@page "/"
@using Chirp.Core.Entities
@using Chirp.Core.Repository
@using Chirp.Web.Pages.Shared
@using FluentValidation
@model Chirp.Web.Pages.PublicModel
@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager
@inject IValidator<CreateCheep> Validator
@inject ICheepRepository CheepRepository


@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>


   
     @if (SignInManager.IsSignedIn(User))  
      {  
         @await Html.PartialAsync("Shared/_CheepBox", new CheepBoxModel(UserManager, Validator, CheepRepository))
      } 
    
    @if (Model.Cheeps.Any())
    {
        @await Html.PartialAsync("Shared/_CheepList", Model)
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

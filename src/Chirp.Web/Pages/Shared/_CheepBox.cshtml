@model Chirp.Web.Pages.TimeLineModel

<div class="cheepbox" >
    <h3>What's on your mind @(User.Identity?.Name)?</h3>
    <form method="post"  asp-page-handler="CreateCheep">
        <label asp-for="Cheep" >Write your text here</label>
        <input class="form-control" asp-for="Cheep"/>
        <span asp-validation-for="Cheep" style="display: flex; color: red;"></span>
        <input type="submit" value="Cheep" style="margin: 10px 0"/>
    </form>
</div>



<div class="cheepbox" >
    <h3>What's on your mind @(User.Identity?.Name)?</h3>
    <form method="post" asp-page-handler="CreateCheep" asp-page="Public">
        <label for="NewCheep.Text">Write your text here</label>
        <input id="NewCheep.Text" name="NewCheep.Text" class="form-control"/>
        <span for="NewCheep.Text" class="text-danger"> </span>
        <input type="submit" value="Cheep" />
    </form>
</div>

@page "/{author}/AboutMe"
@using Chirp.Core.Entities
@model AboutMeModel
@{
    ViewData["Title"] = "About Me";
}
@inject SignInManager<Author> SignInManager

<h2>About Me</h2>

@if (SignInManager.IsSignedIn(User))
{
    <div class="cheepbox">
        <div>
            <span class="">Username:</span> 
            <span class="">@Model.UserModel.Username</span>
        </div>
    
        <div class="form-group">
            <span>Email:</span>
            <span class="">@Model.UserModel.Email</span>
        </div>
   
        <!-- TODO Create a red "Forget Me" button -->
    </div>
    
    <hr/>

    <div class="cheepbox">
        <div class="row">
            <div class="col-md-6">
                <h3>Following</h3>
                @if (Model.UserModel.Following == null || !Model.UserModel.Following.Any())
                {
                    <p>You are not following anyone yet.</p>
                }
                else
                {
                    <ul>
                        @foreach (var followingUser in Model.UserModel.Following)
                        {
                            <li>@followingUser.UserName</li>
                        }
                    </ul>
                }
            </div>
        
            <div class="col-md-6">
                <h3>Followers</h3>
                @if (Model.UserModel.Followers == null || !Model.UserModel.Followers.Any())
                {
                    <p>No followers yet.</p>
                }
                else
                {
                    <ul>
                        @foreach (var follower in Model.UserModel.Followers)
                        {
                            <li>@follower.UserName</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>

    <hr/>
    
    <h3>My Cheeps</h3>

    @if (Model.Cheeps == null || !Model.Cheeps.Any())
    {
        <div>
            <p>You have no cheeps so far.</p>
        </div>
    }
    else 
    {
        @await Html.PartialAsync("~/Pages/Shared/_CheepList.cshtml", Model)
    }
}




